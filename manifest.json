{
    "manifest_version" : 2,
    
    "name" : "IntelliShek",
    "description": "tracks your web activity with accurate time analysis",
    "version" : "1.0",
    "browser_action" : {
        "default_icon" : "icon.png",
        "default_popup" :"popup.html"
    },

    "options_page" :"options.html",
    "permissions" : [
        "storage",
        "tabs",
        "identity",
        "identity.email",
        "activeTab"

    ],
    "content_scripts": [
        {
          "matches": ["http://*/*"],
          "js": ["content.js"],
          "run_at": "document_idle"
        }
      ],
    "background" : {
        "scripts": ["jquery.js", "tabChange.js"],
        "persistent": false
    }
    

}